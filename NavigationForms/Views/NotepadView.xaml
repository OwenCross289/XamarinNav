<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NavigationForms.Views.NotepadView"
             xmlns:animations="clr-namespace:Lottie.Forms;assembly=Lottie.Forms" >
    <StackLayout>
        <Label Text="{Binding Text}"
               Margin="10"/>
        <animations:AnimationView x:Name="animationView"
                                      Margin="55"
                                      Animation="resource://Resources.42504-blocks.json?assembly=NavigationForms"
                                      AnimationSource="EmbeddedResource"
                                      AutoPlay="True"
                                      BackgroundColor="Transparent"
                                      RepeatMode="Infinite"
                                      VerticalOptions="FillAndExpand"
                                      HorizontalOptions="FillAndExpand" />
    </StackLayout>
</ContentView>
